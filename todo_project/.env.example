# Secret key for Django security - replace with your own secure value
SECRET_KEY=your_secret_key_here

# Debug mode: set to False in production!
DEBUG=True

# Allowed hosts for the Django server - comma separated
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL database configuration
DB_NAME=todo_db
DB_USER=todo_user
DB_PASSWORD=your_password
DB_HOST=db          # Use 'db' for Docker, 'localhost' for local development
DB_PORT=5432

# (Optional) If you use CORS for frontend apps, specify allowed origins as comma separated URLs
# CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
